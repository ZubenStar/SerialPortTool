                                    <TextBlock>
                                        <Run Text="{Binding Timestamp, Mode=OneWay}"/>
                                        <Run Text=" ["/>
                                        <Run Text="{Binding Level, Mode=OneWay}"/>
                                        <Run Text="] ["/>
                                        <Run Text="{Binding PortName, Mode=OneWay}"/>
                                        <Run Text="] "/>
                                        <Run Text="{Binding Content, Mode=OneWay}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

