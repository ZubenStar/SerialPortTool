              Padding="8,4"
              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
              BorderThickness="0,1,0,0">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
